<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="trade" extends="struts-default">
		<result-types>
			<result-type name="freemarker"
				class="org.apache.struts2.views.freemarker.FreemarkerResult"
				default="true" />
		</result-types>

		<action name="trade_list" class="TradeImportAction" method="list">
			<result name="success">/trade/list.ftl</result>
			<result name="login" type="redirect">${taobao.sessionUrl}</result>
		</action>
		
		<action name="trade_input" class="TradeImportAction" method="input">
			<result name="success">/trade/input.ftl</result>
			<result name="login" type="redirect">${taobao.sessionUrl}</result>
		</action>
		
		<action name="trade" class="TradeImportAction">
			<result name="success">/trade/import.ftl</result>
			<result name="login" type="redirect">${taobao.sessionUrl}</result>
		</action>
		
		<action name="trade_session" class="TradeImportAction" method="session_callback">
			<result name="success" type="redirect-action">/trade/trade_input</result>
		</action>
		
	</package>

</struts>
