<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Order">

	<typeAlias alias="Order" type="erp.model.Order" />

	<insert id="create" parameterClass="Order">
		<![CDATA[
		INSERT INTO "order" (create_date, status, fee, comment) 
		VALUES (#createDate#, #status#, #fee#, #comment#)
		]]>
		<selectKey resultClass="int" keyProperty="id">
			<![CDATA[
			SELECT currval('order_id_seq')
			]]>
		</selectKey>
	</insert>

	<select id="read" parameterClass="int" resultClass="Order">
		<![CDATA[
		SELECT id,create_date AS createDate,status,fee,comment
		FROM "order"
		WHERE id=#id#
		]]>
	</select>

	<update id="update" parameterClass="Order">
		<![CDATA[
		UPDATE "order" SET create_date=#createDate#,status=#status#,fee=#fee#,comment=#comment#
		WHERE id=#id#
		]]>
	</update>

	<delete id="delete" parameterClass="int">
		<![CDATA[
		DELETE FROM "order" WHERE id=#id#
		]]>
	</delete>

	<select id="count" parameterClass="map" resultClass="int">
		<![CDATA[
		SELECT COUNT(*) AS NUM FROM "order"
		]]>
		<dynamic>
			<isGreaterThan prepend="WHERE" property="status"
				compareValue="-1">
				status=#status#
			</isGreaterThan>
		</dynamic>
	</select>

	<select id="list" parameterClass="map" resultClass="Order">
		<![CDATA[
		SELECT id,create_date AS createDate,status,fee,comment
		FROM "order"
		]]>
		<dynamic>
			<isNotEmpty prepend="WHERE" property="status">
				status=#status#
			</isNotEmpty>
		</dynamic>
		<![CDATA[
		ORDER BY create_date DESC
		LIMIT #number# OFFSET #index#
		]]>
	</select>

</sqlMap>