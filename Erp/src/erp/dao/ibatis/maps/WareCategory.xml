<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="WareCategory">

	<typeAlias alias="WareCategory" type="erp.model.WareCategory" />

	<insert id="create" parameterClass="WareCategory">
		<![CDATA[
		INSERT INTO erp.ware_category (name,num) VALUES (#name#,#num#)
		]]>
		<selectKey resultClass="int" keyProperty="id">
			<![CDATA[
			SELECT currval('erp.ware_category_id_seq')
			]]>
		</selectKey>
	</insert>

	<select id="read" parameterClass="int" resultClass="WareCategory">
		<![CDATA[
		SELECT id,name,num
		FROM erp.ware_category
		WHERE id=#id#
		]]>
	</select>

	<update id="update" parameterClass="WareCategory">
		<![CDATA[
		UPDATE erp.ware_category SET name=#name#,num=#num#
		WHERE id=#id#
		]]>
	</update>

	<delete id="delete" parameterClass="int">
		<![CDATA[
		DELETE FROM erp.ware_category WHERE id=#id#
		]]>
	</delete>

	<select id="count" resultClass="int">
		<![CDATA[
		SELECT COUNT(*) AS NUM FROM erp.ware_category
		]]>
	</select>

	<select id="list" resultClass="WareCategory">
		<![CDATA[
		SELECT id,name,num
		FROM erp.ware_category
		ORDER BY name
		]]>
	</select>

</sqlMap>