<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="stat" extends="struts-default">
		<result-types>
			<result-type name="freemarker"
				class="org.apache.struts2.views.freemarker.FreemarkerResult"
				default="true" />
		</result-types>

		<action name="stat_summary" class="StatAction">
			<result name="success">/stat/summary.ftl</result>
		</action>

		<action name="keyword" class="KeywordAction">
			<result name="success">/stat/keyword.ftl</result>
		</action>
		
	</package>

</struts>
